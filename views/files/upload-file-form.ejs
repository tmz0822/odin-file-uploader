<% if(folder === null) { %>
<!-- Form for root folder -->
<form action="/files" method="post" enctype="multipart/form-data">
  <input type="file" name="file" />
  <button>Upload</button>
</form>
<% } else { %>
<!-- Form for subfolders -->
<form
  action="/files/<%= folder.id %>"
  method="post"
  enctype="multipart/form-data"
>
  <input type="file" name="file" />
  <button>Upload</button>
</form>
<% } %>
